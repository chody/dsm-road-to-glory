<div class="mt-5">
  <div class="row">
    <div class='table-responsive' style='overflow-x: scroll;'>
      <table class='table'>
        <thead>
          <th></th>
          <% @teams.each do |team| %>
            <th style='text-align: center;'><%= team.owner %></th>
          <% end %>
        </thead>
        <tbody>
          <% 14.times do |round_index| %>
            <tr>
              <td style='text-align: center;'>Round <%= round_index + 1 %></td>
                <% 10.times do |dpi| %>
                  <% player = Team.find_by(draft_position: dpi + 1).players.all.order(updated_at: :asc)[round_index] %>
                  <% if player %>
                    <td style='text-align: center;'>
                      <table>
                        <tr>
                          <td><%= image_tag player.headshot, size: '' %></td>
                        </tr>
                        <tr>
                          <td style='font-size: 10px; white-space: nowrap;'><%= player.name %> - <%= player.position %></td>
                        </tr>
                        <tr>
                          <td style='font-size: 10px; white-space: nowrap;'><%= player.nfl_team %></td>
                        </tr>
                      </table>
                    </td>
                <% else %>
                  <td></td>
                <% end %>
              <% end %>
            </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
